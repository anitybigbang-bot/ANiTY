{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",              // NodeでESMなら package.json に "type":"module" を入れる
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "dist"
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}